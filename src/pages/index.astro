---
import Layout from "../layouts/Layout.astro";
import Components from "../components/Welcome.astro";
import Artists from "../components/Artists.astro";
import Albums from "../components/Albums.astro";
import Action from "../components/Action.astro";
const logoSrc = "/spotify-logo.svg";
const homeIcon = "/home-icon.svg";
const deviceIcon = "/device-icon.svg";
---

<Layout>
  <header>
    <nav class="navbar">
      <div class="navbar-left">
        <img src={logoSrc} alt="Spotify Logo" class="logo" />
        <img src={homeIcon} alt="Home" class="icon home-icon" />
        <div class="search-bar">
          <input type="text" placeholder="What do you want to play?" />
          <img src={deviceIcon} alt="Device" class="icon device-icon" />
        </div>
      </div>

      <div class="navbar-right">
        <a href="#">Premium</a>
        <a href="#">Support</a>
        <a href="#">Download</a>
        <div class="divider"></div>
        <a href="#">Install App</a>
        <a href="#">Sign up</a>
        <button class="login-btn">Log in</button>
      </div>
    </nav>
  </header>
  <main>
